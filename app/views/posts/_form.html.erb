<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_field :content  %>

    <%= f.label :category_ids %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

    <%= f.fields_for :categories, @post.categories.build do |ff| %>
        <%= ff.label :name %>
        <%= ff.text_field :name %>
    <% end %>

    <%= f.submit "Create Post" %>
<% end %>