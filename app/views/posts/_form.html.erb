
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  </div>
  <div>
    <%= f.label 'Other Category' %>
    <%= f.fields_for :categories, @post.categories.build do |c_fields| %>
      <%= c_fields.text_field :name %>
    <% end %>
  </div>
  <%= f.submit %>
<% end %>